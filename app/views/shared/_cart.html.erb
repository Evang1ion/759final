<div style="position: fixed; right: 0; top: 0; width: 300px; padding: 1rem; background: #f7f7f7; border-left: 1px solid #ccc; height: 100%; overflow-y: auto;">
  <h3>Your Cart</h3>

  <% if current_order && current_order.order_items.any? %>
    <ul>
      <% current_order.order_items.each do |item| %>
        <li>
          <%= item.menu_item.name %> x <%= item.quantity %><br>
          <%= number_to_currency(item.menu_item.price * item.quantity) %>
          <%= button_to 'X', order_item_path(item), method: :delete, form_class: "inline", class: "btn btn-sm" %>
        </li>
      <% end %>
    </ul>

    <strong>Total: <%= number_to_currency(current_order.total_price) %></strong>
    <br>
    <%= link_to 'View Full Cart', order_path(current_order) %>
  <% else %>
    <p>Your cart is empty.</p>
    <%= link_to 'Back to Menu', restaurants_path, class: "btn btn-secondary" %>
  <% end %>
</div>

